{
  "compilerOptions": {
    "lib": ["es2015", "DOM"],
//    "noEmitOnError": true,
//    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "pretty": true,
    "preserveConstEnums": true,
    "stripInternal": true,
    "sourceMap": true,
    "target": "es5",
    "module": "es6",
    "newLine": "lf",
    "outDir": "dist",
    "moduleResolution": "Node",
    "declaration": true
  },
  "include": [
    "src/*"
  ]
}
